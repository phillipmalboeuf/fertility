---
import { Picture, Image } from 'astro:assets'
import type { Asset } from 'contentful'

interface Props {
  media: Asset<"WITHOUT_UNRESOLVABLE_LINKS">
}
const { media } = Astro.props;
---

{media && <Picture src={media.fields.file.url.toString()} alt={media.fields.title+" "+media.fields.description} width={media.fields.file.details.image.width} height={media.fields.file.details.image.height} />}


<style lang="scss">
  picture {
    display: block;
  }
  
  :global(img) {
    display: block;
    width: 100%;
    max-height: 100%;
    object-fit: cover;
  }
</style>
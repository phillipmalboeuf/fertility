---
import type { Entry } from 'contentful'
import type { TypeGallerySkeleton } from '@/content_types'
import Close from '@/icons/close.svg?raw'
import Media from './Media.astro'
import Content from './Content.astro'

interface Props {
  item: Entry<TypeGallerySkeleton, "WITHOUT_UNRESOLVABLE_LINKS">
}
const { item } = Astro.props;

const randoms = {
  underlays: Math.floor(Math.random() * item.fields.underlays.length),
  content: Math.floor(Math.random() * item.fields.content.length),
  overlays: Math.floor(Math.random() * item.fields.overlays.length),
}
---

<section>
  <figure>
    <Media media={item.fields.underlays[randoms.underlays]} eager square />

    <details>
      <summary>{item.fields.title} <Fragment set:html={Close} /></summary>
      <Content content={[item.fields.content[randoms.content]]} />
    </details>

    <div class="overlay" style={`--mask: url(${item.fields.overlays[randoms.overlays].fields.file.url})`}></div>
  </figure>
</section>

<style lang="scss">
  section {
    --gallery-color: #{$beige};
    position: relative;
    margin: $base * -3;
    background: var(--gallery-color);
    overflow: hidden;
  }

  figure {
    height: 100vh;

    :global(picture) {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;

      &:first-child {
        :global(img) {
          height: 72vh;
          width: 72vh;
          max-height: none;
          object-fit: cover;
          border-radius: 50%;
        }
      }
    }

    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: var(--gallery-color);
      mask: var(--mask) no-repeat center;
      mask-size: cover;
      animation: rotating 20s linear infinite;
    }

    details {
      position: absolute;
      z-index: 2;
      bottom: 0;
      left: 0;
      width: 100%;

      summary {
        cursor: pointer;
        font-size: $base * 1.25;
        padding: $base * 2;
        text-align: center;

        &::marker,
        &::-webkit-details-marker {
          display: none;
          content: "";
        }

        :global(> svg) {
          display: none;
        }
      }

      &[open] {
        color: $front-color;
        background-color: fade-out($black, 0.666);
        min-height: 100vh;

        summary {
          position: absolute;
          top: 0;
          right: 0;
          font-size: 0;

          :global(> svg) {
            display: inline-block;
          }
        }

        + :global(picture) {
          display: none;
        }
      }
    }
  }
</style>